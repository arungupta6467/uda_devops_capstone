{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "gcapstone",
    "labels": {
      "app": "gcapstone"
     }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "app": "gcapstone"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "gcapstone"
        }
      },
      "spec": {
        "containers": [
         {
            "name": "gcapstone",
            "image": "BUILD_NUMBER",
            "ports": [
              {
                "name": "http-server",
                "containerPort": 80
               }
             ]
         }
        ]
     }
    }
  }
}
